<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CoursesLoginActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/Courses_login_listView"
            android:layout_width="450dp"
            android:layout_height="wrap_content" >
        </ListView>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/manage_courses_login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_courses_login_margin"
        android:text="@string/manage_button_text" />
    
    <Button
        android:id="@+id/profile_courses_login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/manage_courses_login_button"
        android:text="@string/profile_button_text" />   
    
    <Button
        android:id="@+id/logout_courses_login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/profile_courses_login_button"
        android:text="@string/logout_button_text" />

</RelativeLayout>
